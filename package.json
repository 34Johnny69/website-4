{
  "name": "choo-website",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "bankai start",
    "build": "bankai build -O",
    "build-icons": "svgo -f assets && spritesh --input assets --output sprite.svg --viewbox '0 0 267 79' --prefix icon-",
    "test": "standard && dependency-check . --unused --no-dev -i tachyons -i vhs",
    "publish": "git push && npm run build && surge -p ./dist -d choo.io"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "dependencies": {
    "choo": "^4.0.0",
    "highlight-syntax": "^3.0.2",
    "tachyons": "^4.5.6",
    "vhs": "^0.2.0"
  },
  "devDependencies": {
    "bankai": "^5.1.3",
    "brfs": "^1.4.3",
    "dependency-check": "^2.6.0",
    "from2-string": "^1.1.0",
    "hyperstream": "^1.2.2",
    "spritesh": "^1.2.0",
    "standard": "^8.6.0",
    "surge": "^0.18.0",
    "svgo": "^0.7.1"
  }
}
